{% extends 'base.html.twig' %}

{% block title %}Editer profil {{ app.user.slug }}{% endblock %}

{% block body %}
    <h4 class="mt-4">Bienvennue sur l'édition de votre profil</h4>
    {{ form_start(form) }}
    <div class="row d-flex justify-content-center mt-4 mb-0">
        <div class="col-sm-6 col-md-6 mb-2">
            {{ form_row(form.nom) }}
            {{ form_row(form.prenom) }}

            {{ form_row(form.email) }}
            {{ form_row(form.description) }}
            {{ form_row(form.avatarFile) }}
            <div class="editBouton d-flex justify-content-around m-5">
                <button class="btn btn-info"><a class="text-white" href="{{ path('account_user',{'slug':user.slug}) }}">Mon profil</a></button>
                <button class="btn btn-secondary"><a href="{{ path('user_account_edit',{'slug':user.slug}) }}"></a>Mettre à jour</button>
            </div>
        </div>
        <div class="col-sm-6 col-md-6 mb-0">
            {% if app.user.avatar == null %}
                <img class="logoEdit mx-auto d-block " style="width: 220px;" src="{{ asset('/build/uploads/logo/logo-aidetonvoisin-inversé.png') }}" alt="default">
            {% else  %}
                <img class="logoEdit mx-auto d-block " src="{{ asset('/build/uploads/images/avatar/'~user.avatar) | imagine_filter('my_thumb') }}" alt="{{ app.user.avatar }}">
            {% endif %}
            {#<div class="text-center  mt-4">
                <a href="{{ path('user_delete',{ 'slug':user.slug }) }}">rftgh</a>
            </div>#}
        </div>
        {{ form_end(form) }}
    </div>


{% endblock %}


