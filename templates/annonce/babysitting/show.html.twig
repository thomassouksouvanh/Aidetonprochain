{% extends 'base.html.twig' %}

{% block title %}Annonce{% endblock %}

{% block body %}
    <h4 class="text-center mt-4">Categorie : annonce babbysitting</h4>
    <div class="card testimonial-card mt-4 mb-3">
        <div class="card-body">
            <div class="row">
                <div class="col col-sm col-md-7 col-lg-8">
                    <div class="text-muted">
                        <p>Publié le :
                            {{ annonce.createdAt|date('d-m-Y') }}
                            {% if app.user and app.user is same as (annonce.user) %}
                            <a href="{{ path('annonce_babysitting_edit', {'slug': annonce.slug}) }}">
                                <button class="btn btn-secondary ml-4">Editer</button>
                            </a>
                        </p>
                        {% endif %}
                    </div>
                    <hr>
                    <p class="card-title font-weight-bold">Titre de l'annnonce :</p> {{ annonce.nom }}
                    <hr>
                    <p class="font-weight-bold">Type d'annonce : </p> {{ annonce.type }}
                    <hr>
                    <p class="font-weight-bold">Description : </p> {{ annonce.description }}
                    <hr>
                    <p class="font-weight-bold">Code postal : </p> {{ annonce.zip }}
                    <hr>
                    <p class="font-weight-bold">Ville : </p> {{ annonce.city }}
                    <hr>
                    <p class="font-weight-bold">Pays : </p> {{ annonce.pays }}
                    <hr>
                </div>
                <div class="col col-sm col-md-4 col-lg-4">
                    {% if annonce.user.avatar is not null%}
                        <a href="{{ path('account_user',{'slug':annonce.user.slug}) }}">
                            <img src="{{ asset('build/uploads/images/avatar/'~ annonce.user.avatar) | imagine_filter('my_thumb') }}"
                                 class="d-block img-thumbnail mx-auto" alt="avatar" title="voir le profil">
                        </a>
                    {% else %}
                        <a href="{{ path('account_user',{'slug':annonce.user.slug}) }}">
                            <img src="{{ asset('build/uploads/logo/Logo.png') | imagine_filter('my_thumb') }}"
                                 class="d-block img-thumbnail mx-auto" alt="default" title="voir le profil">
                        </a>
                    {% endif %}
                </div>
            </div>
            <div class="row">
                <div class="col">
                    <a href="{{ path('annonce_babysitting_index') }}">
                        Liste de toutes les annonces
                    </a>
                </div>
            </div>
            {% if app.user  %}
                <div class="row">
                    <div class="col">
                        <a href="{{ path('account_user',{'slug':app.user.slug}) }}">Retour à mon profil</a>
                    </div>
                </div>
            {% endif %}
        </div>
    </div>
{% endblock %}
