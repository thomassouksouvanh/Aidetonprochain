{% extends 'base.html.twig' %}

{% block title %}Streaming{% endblock %}

{% block body %}
    <h4 class="text-center mt-4">Categorie : streaming</h4>
    <div class="card testimonial-card mt-4 mb-3">
        <div class="card-body">
            <div class="row">
                <div class="col col-sm col-md-7 col-lg-8">
                    <div class="text-muted">
                        <p>Publié le :
                            {{ streaming.createdAt|date('d-m-Y') }}
                            {% if app.user and app.user is same as (streaming.user) %}
                            <a href="{{ path('streaming_edit', {'slug': streaming.slug}) }}">
                                <button class="btn btn-secondary ml-4">Editer</button>
                            </a>
                        </p>
                        {% endif %}
                    </div>
                    <hr>
                    <p class="card-title font-weight-bold">Titre du film ou de la série :</p> {{ streaming.nom }}
                    <hr>
                    <p class="font-weight-bold">Description : </p>{{ streaming.description }}
                    <hr>
                    <p class="font-weight-bold">Lien du film : </p>
                    <a href="{{ streaming.link }}" target="_blank">{{ streaming.link }}</a>
                    <hr>
                </div>
                <div class="col col-sm col-md-4 col-lg-4">
                    {% if streaming.user.avatar is not null%}
                        <a href="{{ path('account_user',{'slug':streaming.user.slug}) }}">
                        <img src="{{ asset('build/uploads/images/avatar/'~ streaming.user.avatar) | imagine_filter('my_thumb') }}"
                             class="d-block img-thumbnail mx-auto" alt="avatar" title="voir le profil">
                        </a>
                    {% else %}
                        <a href="{{ path('account_user',{'slug':streaming.user.slug}) }}">
                        <img src="{{ asset('build/uploads/logo/Logo.png') | imagine_filter('my_thumb') }}"
                             class="d-block img-thumbnail mx-auto" alt="default" title="voir le profil">
                        </a>
                    {% endif %}
                </div>
            </div>
            <div class="row">
                <div class="col">
                    <a href="{{ path('streaming_index') }}">
                        Retour à la liste de tous les streaming
                    </a>
                </div>
            </div>
            {% if app.user %}
            <div class="row">
                <div class="col">
                    <a href="{{ path('account_user',{'slug':app.user.slug}) }}">Retour à mon profil</a>
                </div>
            </div>
            {% endif %}
        </div>
    </div>
{#    {{ include('iHelp/streaming/_delete_form.html.twig') }}#}
{% endblock %}
