<div class="row">
    {% for gaming in user.gamings %}
        <div class="col col-sm col-md col-lg-6 d-flex justify-content-around">
            <div class="card {{ cycle(['odd','even'], loop.index0) }} m-4 " style="width: 30rem;">
                <div class="card-body">
                    <h6 class="text-muted">Publié le:
                        {{ gaming.createdAt|date('d-m-Y') }}
                    </h6>
                        <h5 class="card-title">Titre :{{ gaming.nom }}</h5>
                            <p class="card-text">Plateforme:  {{ gaming.type }}</p>
                            <p class="card-text">Lien : {{ gaming.link }}</p>
                    <div class="row mt-2">
                        {% if app.user and app.user is same as (user) %}
                        <a href="{{ path('gaming_edit', {'slug': gaming.slug}) }}">
                            <button class="btn btn-success ml-3 mr-5">Editer</button>
                        </a>
                        {{ include('gaming/_delete_form.html.twig') }}
                        {% endif %}
                    </div>
                </div>
            </div>
        </div>

    {% else %}
        <div class="row">
            <h3 class="ml-5">Aucune partie de jeux enregistré</h3>
        </div>
    {% endfor %}
</div>

