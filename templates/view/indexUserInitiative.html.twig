
<div class="row">
    {% for initiative in user.initiatives %}
        <div class="col col-sm col-md col-lg-6 d-flex justify-content-around">
            <div class="card {{ cycle(['odd','even'], loop.index0) }} m-4 " style="width: 30rem;">
                <div class="card-body">
                    <h6 class="text-muted">Publié le:
                        {{ initiative.createdAt|date('d-m-Y') }}
                    </h6>
                    <h5 class="card-title mt-0 mb-1">{{ initiative.nom }}</h5>
                    <p class="card-text mb-0">Description :</p>
                    <p class="card-text mt-0 mb-1">{{ initiative.description }}</p>
                    <p class="card-text mt-0 mb-1">{{ initiative.city }}</p>
                    <p class="card-text d-inline mt-0">Lien : {{ initiative.link }}</p>
                    <div class="row mt-2">
                        {% if app.user and app.user is same as (user) %}
                            <a href="{{ path('initiative_edit', {'slug': initiative.slug}) }}">
                                <button class="btn btn-success ml-3 mr-5">Editer</button>
                            </a>
                            {{ include('initiative/_delete_form.html.twig') }}
                        {% endif %}
                    </div>
                </div>
            </div>
        </div>
    {% else %}
        <div class="row">
            <h3 class="ml-5">Aucune initiative enregistré</h3>
        </div>
    {% endfor %}
</div>

