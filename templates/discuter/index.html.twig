{% extends 'base.html.twig' %}

{% block title %}conversation index{% endblock %}

{% block body %}
    {% include('/default/bandeaujaibesoindaide.html.twig') %}
<div class="row">
    {% for discuter in discuters %}
        <div class="col col-sm col-md-6 col-lg-4 col-xl-3 d-flex justify-content-around">
            <div class="card  {{ cycle(['odd','even'], loop.index0) }} m-4 " style="width: 15rem;">
                {% if discuter.user.avatar is not null%}
                <a href="{{ path('account_user',{'slug':discuter.user.slug}) }}">
                    <img src="{{ asset('build/uploads/images/avatar/'~ discuter.user.avatar) | imagine_filter('thumb') }}"
                         class="card-img-avatar mx-auto mt-2" alt="user image" style="width: 100px" title="voir le profil">
                </a>
                {% else %}
                    <a href="{{ path('account_user',{'slug':discuter.user.slug}) }}">
                    <img src="{{ asset('build/uploads/logo/Logo.png') }}"
                         class="card-img mx-auto mt-1" style="width: 100px;" alt="default" title="voir le profil">
                    </a>
                {% endif %}
                {% if app.user and app.user is same as (discuter.user) %}
                    <p class="control">
                        <a href="{{ path('discuter_edit', {'slug': discuter.slug}) }}"><i class="fas fa-edit "></i></a>
                        <a href="{{ path('discuter_new') }}"><i class="fas fa-plus-circle "></i></a>
                    </p>
                {% endif %}
                <div class="card-body">
                    <p>
                        <small class="text-muted">Publié le:
                            {{ discuter.createdAt|date('d-m-Y') }}
                        </small>
                        <a href="{{ path('discuter_show', {'slug': discuter.slug}) }}"><i class="fas fa-folder-open {{ cycle(['fa_odd','fa_even'], loop.index0) }} ml-2"></i></a>
                    </p>
                    <h5 class="card-title mt-0 mb-2">{{ discuter.nom }}</h5>
                    <p class="card-text mt-0 mb-1">sujet {{ discuter.sujet }}</p>
                    <p class="card-text d-inline mt-0">
                        <a href="{{ discuter.link }}" target="blank">Rejoindre la conversation</a>
                    </p>
                </div>
            </div>
        </div>

    {% else %}
        <div class="row">
            <h3 class="text-center ml-5">Aucune conversation enregistré</h3>
        </div>
    {% endfor %}
</div>
    <div class="row align-items-center justify-content-center">
        {{ knp_pagination_render(discuters) }}
    </div>

{% endblock %}
